<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".UI.author.AuthorFragment">

    <android.support.constraint.Group
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/iv_author_thumbnail"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="@dimen/margin_medium_16"
        android:layout_marginTop="@dimen/margin_medium_16"
        android:adjustViewBounds="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:contentDescription="@string/description_link_author"
        android:drawableStart="@drawable/ic_website_wikipedia_black_24dp"
        android:scaleX="0.7"
        android:scaleY="0.7"
        android:textSize="@dimen/text_size_medium_16"
        app:layout_constraintStart_toStartOf="@id/iv_author_thumbnail"
        app:layout_constraintTop_toBottomOf="@+id/iv_author_thumbnail"
        tools:text="@string/demo_author_wikipedia_link" />

    <TextView
        android:id="@+id/tv_author_name"
        style="@style/TextAppearance.MaterialComponents.Subtitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_small_8"
        android:text="@string/demo_author_name"
        app:layout_constraintLeft_toRightOf="@id/iv_author_thumbnail"
        app:layout_constraintTop_toTopOf="@id/iv_author_thumbnail"

        />

    <TextView
        android:id="@+id/tv_bio_description"
        style="@style/TextAppearance.MaterialComponents.Body2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_small_8"
        android:layout_marginTop="@dimen/margin_small_8"
        android:layout_marginEnd="@dimen/margin_small_8"
        app:layout_constraintLeft_toRightOf="@id/iv_author_thumbnail"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_author_name"
        tools:text="@string/demo_author_bio_description" />

    <Spinner
        android:id="@+id/sp_quote_fav_or_all"
        style="Spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_small_8"
        android:entries="@array/quotes_show_option_array"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_bio_description"

        />

    <TextView
        android:id="@+id/tv_total_quotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textAlignment="viewEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/sp_quote_fav_or_all"
        app:layout_constraintTop_toBottomOf="@id/tv_bio_description"
        tools:text="@string/demo_author_total_quotes" />

    <include
        layout="@layout/item_quote_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sp_quote_fav_or_all" />

</android.support.constraint.ConstraintLayout>