<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UI.quote.QuoteActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/item_toolbar" />


    <RelativeLayout
        android:id="@+id/ll_author_box"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_small_8">

        <ImageView
            android:id="@+id/iv_random_author_thumbnail"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="@dimen/margin_small_8"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tv_random_author_description"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_small_8"
            android:layout_toEndOf="@id/iv_random_author_thumbnail"
            android:text="Random Author" />
        <TextView
            android:id="@+id/tv_random_author_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_small_8"
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_below="@+id/tv_random_author_description"
            android:layout_marginTop="@dimen/margin_small_8"
            android:layout_toRightOf="@id/iv_random_author_thumbnail"
            android:text="@string/demo_author_name" />

    </RelativeLayout>

    <android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/swipe_refresh_quote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ll_author_box">

        <include
            layout="@layout/item_quote_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_author_box" />
    </android.support.v4.widget.SwipeRefreshLayout>
</android.support.constraint.ConstraintLayout>

